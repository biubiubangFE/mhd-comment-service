<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mhdss.comment.dao.CommentDAO">

  <sql id="insert_columns">
    (product_id, user_id, top_type, parent_id, comment_value, status, create_time, update_time)
  </sql>

  <sql id="insert_values">
    (#{productId}, #{userId}, #{topType}, #{parentId}, #{commentValue}, #{status}, #{createTime}, #{updateTime})
  </sql>

  <sql id="query_columns">
    id, product_id AS productId, user_id AS userId, top_type AS topType, parent_id AS parentId, comment_value AS commentValue, status, create_time AS createTime, update_time AS updateTime
  </sql>

  <sql id="where">
    <where>
      
    </where>
  </sql>

  <sql id="limit_where">
    <include refid="where"/>
    <if test="range != 0">
      LIMIT ${start}, ${range}
    </if>
  </sql>

  <insert id="insert" parameterType="com.mhdss.comment.dataobject.CommentDO">
    <selectKey keyProperty="id" resultType="long">
      SELECT LAST_INSERT_ID() AS id
    </selectKey>
    INSERT INTO comment <include refid="insert_columns"/> VALUES <include refid="insert_values"/>
  </insert>

  <update id="insertUpdateOnDuplicate" parameterType="com.mhdss.comment.dataobject.CommentDO">
    <selectKey keyProperty="id" resultType="long">
      SELECT LAST_INSERT_ID() AS id
    </selectKey>
    INSERT INTO comment <include refid="insert_columns"/> VALUES <include refid="insert_values"/> ON DUPLICATE KEY UPDATE update_time = #{updateTime}, id = LAST_INSERT_ID(id)
  </update>

  <update id="updateById" parameterType="com.mhdss.comment.dataobject.CommentDO">
    UPDATE comment
    <set>
      <if test="productId != null">
        product_id = #{productId},
      </if>
      <if test="userId != null">
        user_id = #{userId},
      </if>
      <if test="topType != null">
        top_type = #{topType},
      </if>
      <if test="parentId != null">
        parent_id = #{parentId},
      </if>
      <if test="commentValue != null">
        comment_value = #{commentValue},
      </if>
      <if test="status != null">
        status = #{status},
      </if>
      <if test="createTime != null">
        create_time = #{createTime},
      </if>
      <if test="updateTime != null">
        update_time = #{updateTime},
      </if>
    </set>
    WHERE id = #{id}
  </update>

  <update id="updateByIds" parameterType="java.util.Map">
    UPDATE comment
    <set>
      <if test="target.productId != null">
        product_id = #{target.productId},
      </if>
      <if test="target.userId != null">
        user_id = #{target.userId},
      </if>
      <if test="target.topType != null">
        top_type = #{target.topType},
      </if>
      <if test="target.parentId != null">
        parent_id = #{target.parentId},
      </if>
      <if test="target.commentValue != null">
        comment_value = #{target.commentValue},
      </if>
      <if test="target.status != null">
        status = #{target.status},
      </if>
      <if test="target.createTime != null">
        create_time = #{target.createTime},
      </if>
      <if test="target.updateTime != null">
        update_time = #{target.updateTime},
      </if>
    </set>
    WHERE id IN
    <foreach close=")" collection="ids" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

  <delete id="deleteById" parameterType="long">
    DELETE FROM comment WHERE id = #{id}
  </delete>

  <delete id="deleteByIds" parameterType="java.util.Collection">
    DELETE FROM comment WHERE id IN
    <foreach close=")" collection="collection" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </delete>

  <select id="selectById" parameterType="long" resultType="com.mhdss.comment.dataobject.CommentDO">
    SELECT <include refid="query_columns"/> FROM comment WHERE id = #{id}
  </select>

  <select id="selectIdsByQuery" parameterType="com.mhdss.comment.query.CommentQuery" resultType="long">
    SELECT id FROM comment <include refid="limit_where"/>
  </select>

  <select id="selectByIds" parameterType="java.util.Collection" resultType="com.mhdss.comment.dataobject.CommentDO">
    SELECT <include refid="query_columns"/> FROM comment WHERE id IN
    <foreach close=")" collection="collection" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </select>

  <select id="selectCount" parameterType="com.mhdss.comment.query.CommentQuery" resultType="int">
    SELECT COUNT(*) FROM comment <include refid="where"/>
  </select>

  <select id="selectList" parameterType="com.mhdss.comment.query.CommentQuery" resultType="com.mhdss.comment.dataobject.CommentDO">
    SELECT <include refid="query_columns"/> FROM comment <include refid="limit_where"/>
  </select>
</mapper>