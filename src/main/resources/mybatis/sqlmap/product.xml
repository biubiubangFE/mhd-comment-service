<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mhdss.comment.dao.ProductDAO">

  <sql id="insert_columns">
    (tenant_id, resource_id, status, create_time, update_time)
  </sql>

  <sql id="insert_values">
    (#{tenantId}, #{resourceId}, #{status}, #{createTime}, #{updateTime})
  </sql>

  <sql id="query_columns">
    id, tenant_id AS tenantId, resource_id AS resourceId, status, create_time AS createTime, update_time AS updateTime
  </sql>

  <sql id="where">
    <where>
      
    </where>
  </sql>

  <sql id="limit_where">
    <include refid="where"/>
    <if test="range != 0">
      LIMIT ${start}, ${range}
    </if>
  </sql>

  <insert id="insert" parameterType="com.mhdss.comment.dataobject.ProductDO">
    <selectKey keyProperty="id" resultType="long">
      SELECT LAST_INSERT_ID() AS id
    </selectKey>
    INSERT INTO product <include refid="insert_columns"/> VALUES <include refid="insert_values"/>
  </insert>

  <update id="insertUpdateOnDuplicate" parameterType="com.mhdss.comment.dataobject.ProductDO">
    <selectKey keyProperty="id" resultType="long">
      SELECT LAST_INSERT_ID() AS id
    </selectKey>
    INSERT INTO product <include refid="insert_columns"/> VALUES <include refid="insert_values"/> ON DUPLICATE KEY UPDATE update_time = #{updateTime}, id = LAST_INSERT_ID(id)
  </update>

  <update id="updateById" parameterType="com.mhdss.comment.dataobject.ProductDO">
    UPDATE product
    <set>
      <if test="tenantId != null">
        tenant_id = #{tenantId},
      </if>
      <if test="resourceId != null">
        resource_id = #{resourceId},
      </if>
      <if test="status != null">
        status = #{status},
      </if>
      <if test="createTime != null">
        create_time = #{createTime},
      </if>
      <if test="updateTime != null">
        update_time = #{updateTime},
      </if>
    </set>
    WHERE id = #{id}
  </update>

  <update id="updateByIds" parameterType="java.util.Map">
    UPDATE product
    <set>
      <if test="target.tenantId != null">
        tenant_id = #{target.tenantId},
      </if>
      <if test="target.resourceId != null">
        resource_id = #{target.resourceId},
      </if>
      <if test="target.status != null">
        status = #{target.status},
      </if>
      <if test="target.createTime != null">
        create_time = #{target.createTime},
      </if>
      <if test="target.updateTime != null">
        update_time = #{target.updateTime},
      </if>
    </set>
    WHERE id IN
    <foreach close=")" collection="ids" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

  <delete id="deleteById" parameterType="long">
    DELETE FROM product WHERE id = #{id}
  </delete>

  <delete id="deleteByIds" parameterType="java.util.Collection">
    DELETE FROM product WHERE id IN
    <foreach close=")" collection="collection" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </delete>

  <select id="selectById" parameterType="long" resultType="com.mhdss.comment.dataobject.ProductDO">
    SELECT <include refid="query_columns"/> FROM product WHERE id = #{id}
  </select>

  <select id="selectIdsByQuery" parameterType="com.mhdss.comment.query.ProductQuery" resultType="long">
    SELECT id FROM product <include refid="limit_where"/>
  </select>

  <select id="selectByIds" parameterType="java.util.Collection" resultType="com.mhdss.comment.dataobject.ProductDO">
    SELECT <include refid="query_columns"/> FROM product WHERE id IN
    <foreach close=")" collection="collection" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </select>

  <select id="selectCount" parameterType="com.mhdss.comment.query.ProductQuery" resultType="int">
    SELECT COUNT(*) FROM product <include refid="where"/>
  </select>

  <select id="selectList" parameterType="com.mhdss.comment.query.ProductQuery" resultType="com.mhdss.comment.dataobject.ProductDO">
    SELECT <include refid="query_columns"/> FROM product <include refid="limit_where"/>
  </select>
</mapper>